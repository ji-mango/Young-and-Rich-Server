<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hackathon.youngandrich.account.mapper.AccountMapper">

    <select id="getAccount" parameterType = "long" resultType="AccountResponse">
        select a.accountId, a.accountNum, a.cardName, a.price
        from Account a
        where a.status = 0
          and a.userId = #{userId}
    </select>
</mapper>